<%- contentFor('head') %>
<link rel="stylesheet" type="text/css" href="stylesheets/css/aboutMe.css"/>
<%- contentFor('body') %>
<div class="about-me">
    <span class="intro-line">
        My name is Kyle Manuel Gonzalez Vermeer.
    </span>
    <span class="intro-line">
        I am a <%= yearsOld %> year old software engineer
        from Mountain View, CA.
    </span>
    <div id="personal-image">
    </div>
    <div class="tech-skills">
        <span>My technical skills include:</span>
        <ul class="skills-list">
            <li id="HTML">- HTML</li>
            <li id="CSS">- CSS</li>
            <li id="Javascript">- Javascript</li>
            <li id="Node.js">- Node.js</li>
            <li id="Java">- Java</li>
            <li id="Python">- Python</li>
            <li id="C">- C</li>
        </ul>
        <canvas id="skills-canvas" height="200" width="500">

        </canvas>
        <div class="space-holder"></div>
    </div>
</div>

<script type="text/javascript" src="javascripts/codeCanvas.js"></script>
<script type="text/javascript">
    var codingCanvas = new CodeCanvas("skills-canvas", { "font-size" : 20, "font-family" : "monospace", "drawing-interval" : 75 });
    $("#HTML").hover(function() {
        var codeToDraw = "<html>\n  <head>\n    <title>I love you!</title>\n  </head>\n" +
        "  <body>\n    This is HTML\n  </body>\n</html>";
        codingCanvas.draw(codeToDraw);
    }, function() {});
    $("#CSS").hover(function() {
        var codeToDraw = ".class {\n  color: #A3B627;\n}";
        codingCanvas.draw(codeToDraw);
    }, function() {});
    $("#Javascript").hover(function() {
        var codeToDraw = "var script = \"My Script\";\n" +
                         "if (script.length > 5) {\n" +
                         "  console.log(\"What a long script\");\n" +
                         "};";
        codingCanvas.draw(codeToDraw);
    }, function() {});

</script>
